<html lang="ru">

    <head>
        <meta charset="UTF-8">
        <title>Корзина товаров</title>
        <link rel="stylesheet" href="css/style.css">

    </head>

    <body>
      <div class="container">
        <div class="header">
            <div class="logo">
                <a href="#"><img src="img/logo_crete.png" alt="LOGO"></a>
            </div>
            <div class="menu">
                {% include 'header.tmpl' %}
            </div>
        </div>

        <div class="catalog">

                <h1>Корзина</h1>

                    <table align="center" style="text-align: center;" border="1" width="900">
                        <tr>
                            <th>Фото товара</th>
                            <th>Название товара</th>
                            <th>Количество товара</th>
                            <th>Стоимость товара</th>
                            <th>Действие</th>
                        </tr>
                            <tr>
                            {% for item in contentData %}
                                <td>
                                    <a class="gallery"  title="{{ item.title }}" href="index.php?path=product/show/{{ item.id_good }}"><img height="150" src="{{ item.imgBig }}" alt="Some image"></a><br>
                                </td>
                                <td>
                                    {{ item.title }}
                                </td>
                                <td>
                                    {{ item.good_count }}
                                </td>
                                <td>
                                    {{ item.good_count * item.price }}
                                </td>
                                <td>

                                    <form  action="engine/db_crud.php" method="post" enctype="multipart/form-data">
                                        <input type="hidden" name="action" value="delitem">
                                        <input type="hidden" name="id" value="<?= $data['id_basket']?>">
                                        <input style="width: auto;" type="submit" value="Удалить">
                                    </form>


                                </td>
                            </tr>
                            {% endfor %}
                    </table>

        </div>

        <div class="footer" id="footer">

            {% include 'footer.tmpl' %}
        </div>

      </div>
    </body>
</html>